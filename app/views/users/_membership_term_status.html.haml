- title = membership_status_title(user)
-#  %span{class: "#{is_member_class} membership-status"}= is_member_text

- payment_text = t('users.show.pay_membership')
- payment_action_path =  payments_path(user_id: user.id, type: user.class::THIS_PAYMENT_TYPE)

- admin_edit_status_text = t('users.show.edit_member_status')
- admin_edit_target_id = '#editStatusModal'

#userMemberStatus
  = render partial: 'shared/payor/term_status', locals: { entity: user,
  title: title,
  term_name: 'membership fee',
  term_end: user.membership_expire_date,
  next_term_end: User.next_payment_dates(user.id).last,
  can_make_payment: user.allow_pay_member_fee?,
  payment_text: payment_text, payment_action_path: payment_action_path,
  fee_name: 'membership',
  admin_edit_status_text: admin_edit_status_text,
  admin_edit_target_id: admin_edit_target_id }
